#!/bin/bash

# Output file (can be customized)
USERDATA_FILE="user-data.yaml"

# Optional: Add extra startup commands (one per line)
read -r -d '' EXTRA_RUNCMDS <<'EOF'
sudo apt update && sudo apt install qemu-guest-agent -y
sudo systemctl enable qemu-guest-agent --now
curl -O https://raw.githubusercontent.com/GlueOps/GlueBoot/main/.glue-boot && chmod +x ./.glue-boot && ./.glue-boot all
EOF

# Build the user-data.yaml
{
cat <<EOF
#cloud-config
users:
  - name: ubuntu
    groups: sudo
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh_authorized_keys:
EOF
awk '{print "      - "$0}' ~/.ssh/authorized_keys

cat <<EOF

chpasswd:
  list: |
    root:MySecretPassword
  expire: false

network:
  version: 2
  ethernets:
    default:
      dhcp4: true
      dhcp6: true
      dhcp4-overrides:
        use-dns: false
      nameservers:
        addresses: [8.8.8.8, 1.1.1.1]

package_update: true
package_upgrade: true
packages:
EOF

cat <<EOF

runcmd:
EOF

# Add runcmds, properly indented
while IFS= read -r line; do
  [ -z "$line" ] && continue
  echo "  - ${line}"
done <<< "$EXTRA_RUNCMDS"

} > "$USERDATA_FILE"

echo "Generated $USERDATA_FILE:"
cat "$USERDATA_FILE"
